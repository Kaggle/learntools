{
  "specification": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": {
        "type": "string",
        "default": ""
      },
      "title": {
        "type": "string",
        "default": ""
      },
      "version": {
        "type": "string",
        "default": ""
      },
      "description": {
        "type": "string",
        "default": ""
      },
      "configuration": {
        "type": "object",
        "default": {}
      },
      "max_steps": {
        "type": "integer",
        "minimum": 1,
        "default": 10000
      },
      "agent_timeout": {
        "description": "Seconds an agent function can run before timing out.",
        "type": "integer",
        "minimum": 1,
        "default": 2
      },
      "agents": {
        "type": "array",
        "items": {
          "type": "integer"
        },
        "default": [1]
      },
      "reward": {
        "type": "object",
        "default": { "type": ["number", "null"], "default": 0 }
      },
      "info": {
        "type": "object",
        "default": {}
      },
      "observation": {
        "type": "object",
        "default": {}
      },
      "action": {
        "type": "object",
        "default": { "type": "integer", "default": 0 }
      },
      "reset": {
        "type": "object",
        "default": {}
      }
    }
  },
  "state": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "action": {
        "description": "Value returned from the agent based on the observation.",
        "type": "integer",
        "default": 0
      },
      "reward": {
        "description": "Reward generated by agent action(s).",
        "type": "number",
        "default": 0
      },
      "info": {
        "description": "Additional infomation; not available for evaluation.",
        "type": "object",
        "default": {}
      },
      "observation": {
        "description": "Observation to create an action based upon.",
        "type": "object",
        "default": {}
      },
      "status": {
        "description": "Agent status caused by stepping through the environment.",
        "type": "string",
        "default": "INACTIVE",
        "enum": ["INACTIVE", "ACTIVE", "DONE", "ERROR", "INVALID", "TIMEOUT"]
      }
    }
  }
}
